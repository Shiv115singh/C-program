#include<stdio.h>
void read_array(int array[],int);
void display_array(int array[],int);
void interchange(int arr[],int);
int find_biggest_pos(int arr[],int n);
int find_smallest_pos(int arr[],int n);
int main(){
    int arr[20],n;
    printf("\n Enter the size of the array: ");
    scanf("%d",&n);
    printf("\nEnter the array element: ");
    read_array(arr,n);
    printf("\n The elements of the array are :");
    display_array(arr,n);
    interchange(arr,n);
    printf("\n The element of the array after interchange are : ");
    display_array(arr,n);
    return 0;
}
void read_array(int array[],int n){
    for(int i=0;i<n;i++){
        scanf("%d",&array[i]);
    }
}
void display_array(int array[],int n){
    for(int i=0;i<n;i++){
        printf("\t%d",array[i]);
    }
}
void interchange(int arr[],int n){
    int temp,big_pos,small_pos;
    big_pos=find_biggest_pos(arr,n);
    small_pos=find_smallest_pos( arr, n);
    temp=arr[big_pos];
    arr[big_pos]=arr[small_pos];
    arr[small_pos]=temp;
}
int find_biggest_pos(int arr[],int n){
    int pos=0;
    for(int i=0;i<n;i++){
        if(arr[pos]<arr[i]){
            pos=i;
        }
    }
    return pos;
}
int find_smallest_pos(int arr[],int n){
    int pos=0;
    for(int i=0;i<n;i++){
        if(arr[pos]>arr[i]){
            pos=i;
        }
    }
    return pos;
}
