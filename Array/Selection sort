#include<stdio.h>
int smallest(int arr[],int k,int n);
void selection_sort(int arr[],int n);
int main(){
    int n;
    printf("Enter the size of array: ");
    scanf("%d",&n);
    int arr[n];
    printf("\n Enter the array element: \n");
    for(int i=0;i<n;i++){
        scanf("%d",&arr[i]);
    }
    selection_sort(arr,n);

    printf("\narray element are : \n");
    for(int i=0;i<n;i++){
        printf("%d\t",arr[i]);
    }
    return 0;
}
int smallest(int arr[],int k,int n){
    int small=arr[k],pos=k;
    for(int i=k+1;i<n;i++){
        if(arr[i]<small){
            small=arr[i];
            pos=i;
        }
    }
    return pos;
}
void selection_sort(int arr[],int n){
    for(int i=0;i<n;i++){
        int pos=smallest(arr,i,n);
        int temp=arr[i];
        arr[i]=arr[pos];
        arr[pos]=temp;
    }
}
