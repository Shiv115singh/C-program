#include<stdio.h>
int main(){
    int arr1[10],arr2[10],arr3[30];
    int i=0,j=0,n1,n2,m,index=0;
    printf("\nEnter the number of element in array 1 : ");
    scanf("%d",&n1);
    printf("\nEnter the element of of the first array : ");
    for(i=0;i<n1;i++){
        printf("arr1[%d]: ",i);
        scanf("%d",&arr1[i]);
    }
    printf("\nEnter the number of element in array 2 : ");
    scanf("%d",&n2);
    printf("\nEnter the element of of the first array : ");
    for(i=0;i<n2;i++){
        printf("arr2[%d]: ",i);
        scanf("%d",&arr2[i]);
    }
    i=0;
    j=0;
    m=n1+n2;
   while(i<n1 && j<n2){
       if(arr1[i]<arr2[j]){
           arr3[index]=arr1[i];
           i++;
           index++;
       }else{
           arr3[index]=arr2[j];
           j++;
           index++;
       }
   }
    
    
    while(i<n1){
    arr3[index] = arr1[i];
    i++;
    index++;
}

while(j<n2){
    arr3[index] = arr2[j];
    j++;
    index++;
}

    
    printf("\n The merged array is: ");
    for(i=0;i<m;i++){
        printf("\t%d",arr3[i]);
    }
    return 0;
}
