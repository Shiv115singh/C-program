#include<stdio.h>
int main(){
    int i,n,num,pos,arr[10],pos_value,new_value;
    printf("\n Enter the number of elements in the array: ");
    scanf("%d",&n);
    printf("Enter the value: ");
    for(i=0;i<n;i++){
        scanf("%d",&arr[i]);
    }
    printf("\n Enter the number to be inserted : ");
    scanf("%d",&num);
    printf("\n Enter the position at which the number has to be added : ");
    scanf("%d",&pos);
    new_value=num;
    for(int i=pos;i<n;i++){
        pos_value=arr[i];
        arr[i]=new_value;
        new_value=pos_value;
    }
    arr[n]=new_value;
    n++;
    printf("\nThe arrat after insertion of %d is : ",num);
    for(i=0;i<n;i++){
        printf("\t %d",arr[i]);
    }
    return 0;
}


//**********************************************************************NEW CODE**********************************************

#include<stdio.h>
int main(){
    int i,n,num,pos,arr[10];
    printf("\n Enter the number of elements in the array: ");
    scanf("%d",&n);
    printf("Enter the value: ");
    for(i=0;i<n;i++){
        scanf("%d",&arr[i]);
    }
    printf("\n Enter the number to be inserted : ");
    scanf("%d",&num);
    printf("\n Enter the position at which the number has to be added : ");
    scanf("%d",&pos);
    if(pos<0 || pos>n){
        printf("Invalid position ");
        return 0;
    }
    if(n==10){
        printf("Array is full. Cannot insert.");
        return 0;
    }
    for(i=n-1;i>=pos;i--){
        arr[i+1]=arr[i];
    }
    arr[pos]=num;
    n++;
    printf("\nThe arrat after insertion of %d is : ",num);
    for(i=0;i<n;i++){
        printf("\t %d",arr[i]);
    }
    return 0;
}
