/*Write a program to fill a square matrix with value zero on the diagonal.! on the upper right triangle and -1 on the lower left triangle.*/
#include<stdio.h>
void read_matrices(int r,int c,int mat[r][c]);
void display_matrices(int r,int c,int mat[r][c]);
int main(){
    int row,col;
    printf("Enter the number of rows and columns of the matrix: ");
    scanf("%d",&row);
    col=row;
    int mat[row][col];
    read_matrices(row,col,mat);
    display_matrices(row,col,mat);
    return 0;
}
void read_matrices(int r,int c,int mat[r][c]){
    for(int i=0;i<r;i++){
        for(int j=0;j<c;j++){
            if(i==j){
              mat[i][j]=0;  
            } else if(i<j){
                mat[i][j]=1;
            }else{
                mat[i][j]=-1;
            }
        }
    }
}
void display_matrices(int r,int c,int mat[r][c]){
    for(int i=0;i<r;i++){
        for(int j=0;j<c;j++){
            printf("%d\t",mat[i][j]);
        }
        printf("\n");
    }
}
