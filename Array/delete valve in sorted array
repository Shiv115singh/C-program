#include<stdio.h>

int main(){
    int i,n,j,num,arr[10];

    printf("\nEnter the number of elements in the array: ");
    scanf("%d",&n);

    printf("Enter the array elements: ");
    for(i=0;i<n;i++){
        scanf("%d",&arr[i]);
    }

    printf("\nEnter the number to be deleted: ");
    scanf("%d",&num);

    int found = 0;

    for(i=0;i<n;i++){
        if(arr[i]==num){
            for(j=i;j<n-1;j++){
                arr[j]=arr[j+1];
            }
            found = 1;
            n--;
            break;   // stop after deleting one
        }
    }

    if(!found){
        printf("Element not found!");
        return 0;
    }

    printf("\nThe array after deletion is: ");
    for(i=0;i<n;i++){
        printf("%d ",arr[i]);
    }

    return 0;
}
