#include<stdio.h>
int main(){
    int arr[10];
    int i=0,num,n,begin,end,mid,found=0;
    
    printf("\nEnter the number of element in array : ");
    scanf("%d",&n);
    printf("\nEnter the elements of sorted array : ");
    for(i=0;i<n;i++){
        printf("arr[%d]: ",i);
        scanf("%d",&arr[i]);
    }
    printf("\nEnter the searching number  : ");
    scanf("%d",&num);
    begin=0;
    end=n-1;
   while(begin<=end){
       mid=(end+begin)/2;
       if(arr[mid]==num){
           printf("%d is found at the position of %d",num,mid);
           found=1;
           break;
       }else if(arr[mid]<num){
           begin=mid+1;
       }else if(arr[mid]>num){
           end=mid-1;
       }
   }
   if(found==0){
       printf("%d does not found ",num);
   }
   
    return 0;
}
