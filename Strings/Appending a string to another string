#include<stdio.h>
#include<string.h>
int main(){
    char Dest_Str[100],Source_Str[50];
    int i=0,j=0;
    printf("\n Enter the source  String: ");
    fgets(Source_Str,sizeof(Source_Str),stdin);
    printf("\n Enter the destination string: ");
    fgets(Dest_Str,sizeof(Dest_Str),stdin);
    Dest_Str[strcspn(Dest_Str,"\n")] = '\0';
    Source_Str[strcspn(Source_Str,"\n")] = '\0';
    while(Dest_Str[i]!='\0'){
        i++;
    }
    
    while(Source_Str[j]!='\0'){
        Dest_Str[i]=Source_Str[j];
        i++;
        j++;
    }
    Dest_Str[i]='\0';
    printf("\n After appending , the destination string is : ");
    puts(Dest_Str);
    return 0;
}
