#include<stdio.h>
#include<string.h>
int main(){
    char str[100],substr[100];
    int i=0,n;
    printf("Enter the string: ");
    fgets(str,sizeof(str),stdin);
    str[strcspn(str,"\n")]='\0';
    printf("\nEnter the length of sub string: ");
    scanf("%d",&n);
    while(str[i]!='\0' && i<n){
        substr[i]=str[i];
        i++;
    }
    substr[i] = '\0';
    printf("\n The substring is: ");
    puts(substr);
    return 0;
}
