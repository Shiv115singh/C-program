#include<stdio.h>
#include<string.h>
int main(){
    char str[100],substr[100];
    int i=0,j=0,n,m;
    printf("Enter the string: ");
    fgets(str,sizeof(str),stdin);
    str[strcspn(str,"\n")]='\0';
    printf("\nEnter the Position from which to start the substring: ");
    scanf("%d",&m);
    printf("\nEnter the length of the substring: ");
    scanf("%d",&n);
    i=m;
    while(str[i]!='\0' && n>0){
        substr[j]=str[i];
        i++;
        j++;
    }
    substr[i] = '\0';
    printf("\n The substring is: ");
    puts(substr);
    return 0;
}
